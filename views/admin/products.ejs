<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/pagination.css">
</head>
<body>
  <%- include('../includes/navigation.ejs') %>
  <main>
    <% if (products.length > 0) { %>
    <div class="grid">
      <% for (product of products) { %>
        <article class="card product-item">
          <header class="card__header">
            <h1 class="product__title"><%= product.title %></h1>
          </header>
          <div class="card__image">
            <img src="/<%= product.imageUrl %>" alt="<%= product.title %>">
          </div>
          <div class="card__content">
            <h3 class="product__price"><span class="dollar-sign">$</span><%= product.price %></h3>
            <p class="product__description"><%= product.description%></p>
          </div>
          <div class="card__actions">
            <button class="btn" type="button" onclick="deleteProduct(this)" >Delete</button>
            <input type="hidden" name="productId" value="<%= product._id %>">
            <a class="btn" href="/admin/edit-product/<%= product._id %>?edit=true">Edit</a>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          </div>
        </article>
      <% } %>
    </div>
      <section class="pagination">
        <% if (currentPage !== 1 && previousPage !== 1) { %>
          <a class="pagination-link" href="/admin/products/?page=1">1</a>
        <% } %>
        <% if (hasPreviousPage) { %> 
        <a class="pagination-link" href="/admin/products/?page=<%= previousPage %>">
          <%= previousPage %>
        </a>
        <% } %>
        <a class="pagination-link active" href="/admin/products/?page=<%= currentPage %>">
          <%= currentPage %>
        </a>
        <% if (hasNextPage) { %>
            <a class="pagination-link" href="/admin/products/?page=<%= nextPage %>">
              <%= nextPage %>
            </a>
        <% } %>
        <% if (lastPage !== currentPage && nextPage !== lastPage) { %>
            <a class="pagination-link" href="/admin/products/?page=<%= lastPage %>"><%= lastPage %>
            </a>
        <% } %>
      </section>
      <div class="pagination-link__action">&lt;&lt;     &gt;&gt;</div>
      <% } else { %>
      <h1>No products...</h1>
      <% } %>
  </main>
<%- include('../includes/end.ejs') %>
<script src="/js/admin.js"></script>
